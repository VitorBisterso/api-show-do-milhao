{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,

    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["./src/types/", "./node_modules/@types"],
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"],
  "files": [ "./src/types/index.d.ts" ]
}